@page
@model RazorPageProect.Web.Pages.Auth.Login

@{
    Layout = "Shared/_LoginLayout";
    ViewData["Title"] = "Login";
}

<form method="post" >
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" asp-for="UserName" placeholder="نام کاربری" required="" id="username" />
        <span asp-validation-for="UserName" style="color: red "></span>
    </div>
    <div>
        <input type="password" asp-for="Password" placeholder="کلمه عبور" required="" id="password" />
        <span asp-validation-for="Password" style="color: red "></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Register">Register</a>
    </div>
</form>