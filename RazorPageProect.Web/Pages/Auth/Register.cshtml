@page
@model RazorPageProect.Web.Pages.Auth.Login

@{
    Layout = "Shared/_LoginLayout";
    ViewData["Title"] = "Login";
}

<form action="">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" required="" id="username" />
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" required="" id="password" />
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Login">Login</a>
    </div>
</form>