@page
@model RazorPageProect.Web.Pages.Auth.Register

@{
    Layout = "Shared/_LoginLayout";
    ViewData["Title"] = "Register";
}

<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" asp-for="UserName" placeholder="UserName" required="" id="username" />
        <span asp-validation-for="UserName"></span>
    </div> 
    <div>
        <input type="text" asp-for="FullName" placeholder="FullName" required="" id="username" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <input type="password" asp-for="Password" placeholder="Password" required="" id="password" />
        <span asp-validation-for="Password"></span>
    </div>
   
    <div>
        <input type="submit" value="ورود" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Login">Login</a>
    </div>
</form>